{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "react-app",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:jsx-a11y/recommended",
    "prettier"
  ],
  "plugins": ["import", "jsx-a11y", "react-hooks", "prettier"],
  "rules": {
    "no-unused-vars": "off",
    "quotes": ["off", "single"],
    "indent": ["error", "2"],
    "prettier/prettier": [
      "error",
      {},
      {
        "usePrettierrc": true
      }
    ]
  },
  "parser": "babel-eslint"
}
